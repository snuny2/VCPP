#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

void Splash() {
	printf("202207056 김재표 VCPP\n"); // splash 출력 함수
}

void printcom() {
	printf("command>"); // 앞부분 command>를위한 함수
}

int main() {
	char command; // 커맨드
	char userinput; // 직접 입력


	Splash(); // 위에함수호출

	while (1) {
		printcom(); // 위에 정의해놓은 함수호출

		scanf(" %c", &userinput);
		
		switch (userinput) {

		case 'q':
			printf("\qwer 화이팅\n"); // q를 입력받으면 qwer 화이팅
			break;

		case 'w':
			printf("\r과제 너무 좋다\n"); // w를 입력받으면 w과제너무좋다
			break;

		case 'e':
			printf("\r담주부턴 과제량 3배다\n"); // e를 입력받으면 담주부턴 과제량 3배다
			break;

		case 'r':
			printf("\r행복합니다.\n"); // r를 입력받으면 담
			break;

		case 27: // esc 아스키코드
			return 0;
		default:
			printf("오류 메세지입니다 다시 입력해주세요.\n"); // 다른 문자열을 입력받으면 오류메세지
			break;
		}
		
		}

	}
